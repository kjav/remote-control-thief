<!DOCTYPE html>
<html>
    <head>
        <title>Remote Control Thief</title>
        <link rel='stylesheet' type='text/css' href='/stylesheets/style.css'>
        {{#if watch}}
            <link rel='stylesheet' type='text/css' href='/stylesheets/watch-viewer.css'>
        {{else}}
            <link rel='stylesheet' type='text/css' href='/stylesheets/control-only-viewer.css'>
        {{/if}}
        <link rel='stylesheet' type='text/css' href='/stylesheets/bootstrap.min.css'>
        <script type='text/javascript'>
            isControlSet = {{control}};
            isWatchSet = {{watch}};
        </script>
        <script src='https://cdn.socket.io/socket.io-1.3.5.js'></script>
        <script src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
        <script src='https://www.youtube.com/iframe_api'></script>
        <script src='/js/handlebars-v3.0.3.js'></script>
        <script src='/js/client.js'></script>
        <script src='/js/client-listeners.js'></script>
    </head>
    <body>
        <div id='container'>
            <h1>Remote Control Thief</h1>

            <div id='viewer-container'>
                {{#if watch}}
                    <div id='player'></div>
                {{/if}}

                <span id='playlist'>
                </span>
            </div>

            <div id='lobby-information-container'>
                <p style='clear: both;'>Number of users: <span id='number-of-users'>0</span></p>
            </div>

            <hr />

            <div id='search-container'>
                <form>
                    <span class='form-group'>
                        <label for='search-query-to-send'>Search YouTube</label>
                        <input type='text' id='search-query-to-send' />
                    </span>
                    <button id='search-youtube-button' class='btn btn-default'>Search YouTube</button>
                </form>

                <div id='search-results'>
                </div>
            </div>

            <hr />

            <div id='controls-container'>
                <div id='controls'>
                    {{#if control}}
                        <form id='video-id-form'>
                            <div class='form-group'>
                                <label for='video-id-to-send'>Video ID</label>
                                <input type='text' id='video-id-to-send' />
                            </div>
                            <button id='send-video-id-button' class='btn btn-default'>Submit video</button>
                        </form>
                    {{/if}}
                    {{#unless watch}}
                        <button id='pause-video-button' class='btn btn-default'>Pause video</button>
                        <button id='play-video-button' class='btn btn-default'>Play video</button>
                    {{/unless}}
                    <form id='message-preparation'>
                        <div class='form-group'>
                            <label for='username'>Username</label>
                            <input type='text' id='username' />
                        </div>
                        <div class='form-group'>
                            <label for='message-to-send'>Message</label>
                            <input type='text' id='message-to-send' />
                        </div>
                        <button id='send-message-button' class='btn btn-default'>Send message</button>
                    </form>
                </div>

                <div id='chatbox-container'>
                    <div id='chatbox'>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
